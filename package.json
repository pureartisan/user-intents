{
  "name": "user-intents",
  "version": "1.0.0-alpha.0",
  "description": "A light-wieght library for User Intents in web applications.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json --coverage=true",
    "test:watch": "jest --config jestconfig.json --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pureartisan/user-intents.git"
  },
  "keywords": [
    "User Intents",
    "Intent",
    "Monitoring"
  ],
  "author": "Prageeth Silva <prageethsilva@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pureartisan/user-intents/issues"
  },
  "homepage": "https://github.com/pureartisan/user-intents#readme",
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^25.2.2",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.0.0",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.2"
  },
  "dependencies": {}
}
